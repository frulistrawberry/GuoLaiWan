<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/btn_edit_user_info_avatar"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_7">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:minEms="6"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_11"
            android:text="头像"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentRight="true"
            fresco:failureImage="@mipmap/ic_image_load"
            fresco:placeholderImage="@mipmap/ic_image_load"
            fresco:actualImageResource="@mipmap/ic_image_load"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:failureImageScaleType="centerCrop"
            android:layout_centerVertical="true"
            fresco:roundAsCircle="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#c9c9ca"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="6"
            android:text="昵称"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_11" />

        <EditText
            android:id="@+id/nickNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:inputType="text"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#c9c9ca"/>
    </RelativeLayout>
    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="6"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_11"
            android:text="联系方式"/>
        <EditText
            android:id="@+id/phoneEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:text=""
            android:inputType="text"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_11"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#c9c9ca"/>
    </RelativeLayout>
    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="6"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_11"
            android:text="真实姓名"/>
        <EditText
            android:id="@+id/realNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:inputType="text"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_11"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#c9c9ca"/>
    </RelativeLayout>
    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="6"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_11"
            android:text="工作单位"/>
        <EditText
            android:id="@+id/companyEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:text=""
            android:inputType="text"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_11"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#c9c9ca"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/btn_edit_user_info_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/selector_btn_green"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:text="保存"/>

</LinearLayout>