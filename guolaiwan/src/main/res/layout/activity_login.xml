<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingRight="@dimen/dp_20"
    android:paddingLeft="@dimen/dp_20">
    <LinearLayout
        android:id="@+id/layout_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/sp_16"
            android:text="登录"/>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_110"
        android:hint="请输入手机号"
        android:layout_below="@id/layout_login_title">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:singleLine="true"
            android:inputType="phone"
            android:textSize="@dimen/sp_12"
            android:maxLength="11"
            android:background="@drawable/shape_white_gray_line"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:hint="请输入密码"
        android:layout_below="@id/input_phone">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/shape_white_gray_line"/>

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/selector_btn_green"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:text="登录"
        android:layout_below="@id/input_password"
        android:layout_marginTop="@dimen/dp_30"/>
    <TextView
        android:id="@+id/btn_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#01cb9e"
        android:layout_below="@id/btn_login"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_10"
        android:text="忘记密码"
        />
    <TextView
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#01cb9e"
        android:layout_alignBaseline="@+id/btn_forget_pwd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@id/btn_login"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_10"
        android:text="立即注册"
        />
    <LinearLayout
        android:id="@+id/layout_auth_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_below="@id/btn_register">
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#9f9fa0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9f9fa0"
            android:textSize="@dimen/sp_11"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:text="第三方账号登录"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#9f9fa0"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_wx_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_auth_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/ic_wechat"
        />
</RelativeLayout>






