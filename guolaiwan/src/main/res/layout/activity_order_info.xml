<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_ptr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_15"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_5">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/text_black"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/text_black"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_below="@id/tv_name"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/gray_bg_login_line"/>

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_15"
                    android:orientation="horizontal">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_img"
                        android:layout_width="@dimen/dp_105"
                        android:layout_height="@dimen/dp_70"
                        fresco:failureImage="@mipmap/ic_image_load"
                        fresco:placeholderImage="@mipmap/ic_image_load"
                        fresco:actualImageResource="@mipmap/ic_image_load"
                        fresco:actualImageScaleType="centerCrop"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:failureImageScaleType="centerCrop"
                        fresco:viewAspectRatio="1.5"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dp_70"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textSize="@dimen/sp_14"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_light"
                            android:textSize="@dimen/sp_14"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_light"
                            android:textSize="@dimen/sp_12"
                            android:layout_gravity="right"/>
                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/sp_11"
                        android:text="商品总价"/>
                    <TextView
                        android:id="@+id/tv_product_all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_light"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_11"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13"
                        android:text="订单总价"/>
                    <TextView
                        android:id="@+id/tv_order_all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13"
                        android:text="订单状态"/>
                    <TextView
                        android:id="@+id/tv_order_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/gray_bg_login_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13"
                        android:text="实付款"/>
                    <TextView
                        android:id="@+id/tv_pay_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/layout_refund_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_12">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text_black"
                        android:text="退款原因:"/>
                    <TextView
                        android:id="@+id/tv_reasons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_5"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_order"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        fresco:failureImage="@mipmap/ic_image_load"
                        fresco:placeholderImage="@mipmap/ic_image_load"
                        fresco:actualImageResource="@mipmap/ic_image_load"
                        fresco:actualImageScaleType="fitXY"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:failureImageScaleType="fitXY"
                        fresco:retryImageScaleType="fitXY"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_order_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:textColor="#999999"/>
                        <TextView
                            android:id="@+id/tv_create_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="#999999"/>
                        <TextView
                            android:id="@+id/tv_pay_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="#999999"/>
                        <TextView
                            android:id="@+id/tv_send_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="#999999"/>
                        <TextView
                            android:id="@+id/tv_complete_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="#999999"/>
                        <TextView
                            android:id="@+id/tv_check_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="#999999"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="付款"
            android:background="#01cb9e"/>
        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="退款"
            android:background="#01cb9e"/>
        <TextView
            android:id="@+id/tv_receipt"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="确认收货"
            android:background="#01cb9e"/>
        <TextView
            android:id="@+id/tv_deliver"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="发货"
            android:background="#01cb9e"/>
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="评价"
            android:background="#01cb9e"/>
        <LinearLayout
            android:id="@+id/layout_refund"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_refunded"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="@dimen/dp_45"
                android:layout_weight="1"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:text="同意退款"
                android:background="#01cb9e"/>
            <TextView
                android:id="@+id/tv_refundfail"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="@dimen/dp_45"
                android:layout_weight="1"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_black"
                android:text="拒绝退款"
                android:background="#ffffff"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="导航"
            android:background="#0081f2"/>
    </LinearLayout>
</LinearLayout>