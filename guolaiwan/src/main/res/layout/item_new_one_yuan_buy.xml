<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp">

    <RelativeLayout
        android:id="@+id/class_title_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f4f4f4">
        <TextView
            android:id="@+id/moduler_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="一元购"
            android:textSize="18sp"
            android:textColor="#FF0000"/>
        <TextView
            android:id="@+id/wathc_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:text="查看更多>"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <LinearLayout
                android:id="@+id/layout_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_img0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    fresco:failureImage="@mipmap/ic_image_load"
                    fresco:placeholderImage="@mipmap/ic_image_load"
                    fresco:actualImageResource="@mipmap/ic_image_load"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImageScaleType="centerCrop" />
                <View
                    android:layout_width="7dp"
                    android:layout_height="match_parent"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_img1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    fresco:failureImage="@mipmap/ic_image_load"
                    fresco:placeholderImage="@mipmap/ic_image_load"
                    fresco:actualImageResource="@mipmap/ic_image_load"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImageScaleType="centerCrop" />
                <View
                    android:layout_width="7dp"
                    android:layout_height="match_parent"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_img2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    fresco:failureImage="@mipmap/ic_image_load"
                    fresco:placeholderImage="@mipmap/ic_image_load"
                    fresco:actualImageResource="@mipmap/ic_image_load"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImageScaleType="centerCrop" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
