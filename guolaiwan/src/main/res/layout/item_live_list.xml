<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_parent"
    android:background="#f4f4f4">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_centerHorizontal="true">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            fresco:failureImage="@drawable/live_cover"
            fresco:placeholderImage="@drawable/live_cover"
            fresco:actualImageResource="@drawable/live_cover"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:failureImageScaleType="centerCrop"
            fresco:roundingBorderWidth="@dimen/dp_0_5"
            fresco:roundingBorderColor="#ffffff"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundedCornerRadius="@dimen/dp_5"/>

        <TextView
            android:id="@+id/tv_live_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_5"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/bg_live_item_tv"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6">
            <TextView
                android:id="@+id/tv_live_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:gravity="center"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/white"
                android:background="@drawable/bg_live_item_status_tv"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>