<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/class_title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#f4f4f4"
        android:visibility="gone">
        <TextView
            android:id="@+id/moduler_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="产品分类"
            android:textSize="@dimen/sp_18"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/wathc_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:text="查看更多>"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/class_yiyuangou_title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="#f4f4f4"
        android:paddingLeft="@dimen/dp_15"
        android:visibility="gone">
        <TextView
            android:id="@+id/moduler_yiyuangou_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="一元购"
            android:textSize="@dimen/sp_15"
            android:textColor="#FF0000"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/moduler_yiyuangou_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/daijishi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:text=""/>

            <RelativeLayout
                android:id="@+id/daojishi_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/wathc_more_yiyuangou_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:text="查看更多>"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_13"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15">

            <LinearLayout
                android:id="@+id/name_and_collection_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_16"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#222222"
                        android:text="全聚德"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/colection_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:text=" + 收藏 "
                        android:textSize="@dimen/sp_16"
                        android:textColor="#f35252"
                        android:background="@drawable/bg_circle_collection"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_and_collection_ll"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:maxEms="13"
                    android:ellipsize="end"
                    android:text="钟楼 6.8km"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:maxLines="1"
                    android:text="钟楼 6.8km"
                    android:visibility="gone"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/price_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:text="￥"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:text="226"
                        android:textColor="#222222"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:orientation="horizontal"
                android:layout_below="@id/layout_location"
                android:layout_marginTop="@dimen/dp_10">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_img0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_70"
                    fresco:failureImage="@mipmap/ic_image_load"
                    fresco:placeholderImage="@mipmap/ic_image_load"
                    fresco:actualImageResource="@mipmap/ic_image_load"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImageScaleType="centerCrop" />
                <View
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="match_parent"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_img1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_70"
                    fresco:failureImage="@mipmap/ic_image_load"
                    fresco:placeholderImage="@mipmap/ic_image_load"
                    fresco:actualImageResource="@mipmap/ic_image_load"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImageScaleType="centerCrop" />
                <View
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="match_parent"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_img2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_70"
                    fresco:failureImage="@mipmap/ic_image_load"
                    fresco:placeholderImage="@mipmap/ic_image_load"
                    fresco:actualImageResource="@mipmap/ic_image_load"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImageScaleType="centerCrop" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="#0a77f3"
                android:layout_below="@id/layout_pic"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="服务非常好，价格好，分量足"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
