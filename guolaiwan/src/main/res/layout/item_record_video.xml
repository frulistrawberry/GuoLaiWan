<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_record_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:background="@drawable/selector_pay_item">

    <!--分割线-->
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#e4e6e9"/>

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_80"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#000"
        android:textSize="@dimen/sp_15"
        android:text="视频名称"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/bt_down_load"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/selector_bg_green_left"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:textColor="#fff"
            android:text="下载"/>

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_bg_red_right"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:textColor="#fff"
            android:text="删除"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="#fff"
        android:max="100"/>

</RelativeLayout>