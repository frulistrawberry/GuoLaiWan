<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <io.vov.vitamio.widget.VideoView
        android:id="@+id/surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

    <!--加载-->
    <RelativeLayout
        android:id="@+id/rl_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_voice_loading"
        android:clickable="true"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:indicator="LineScale"
            app:indicator_color="#FFF" />

        <TextView
            android:layout_below="@id/loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFF"
            android:text="正在加载资源,请稍后..."/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/layout_living"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/toplayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:background="@drawable/bg_live_author"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                fresco:failureImage="@mipmap/ic_image_load"
                fresco:placeholderImage="@mipmap/ic_image_load"
                fresco:actualImageResource="@mipmap/ic_image_load"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:failureImageScaleType="centerCrop"
                fresco:viewAspectRatio="1.0"
                fresco:roundAsCircle="true"/>

            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20"
                android:text="小皮匠"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_live_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_10"
            android:textSize="@dimen/sp_13"/>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/send_message"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/ic_live_comment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="聊天"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/add_product"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_product_list"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/change_camera"
                android:visibility="gone"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/change_camera"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/stop_live"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/ic_live_stop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="退出"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:visibility="visible"
            android:layout_above="@id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"/>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/product_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_174"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            android:padding="@dimen/dp_15"
            android:background="#88000000"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/toplayout">
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_img"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_10"
                    fresco:failureImage="@mipmap/ic_image_load"
                    fresco:placeholderImage="@mipmap/ic_image_load"
                    fresco:actualImageResource="@mipmap/ic_image_load"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:viewAspectRatio="1.5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_20"
                        android:textSize="@dimen/sp_12"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/dp_245"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shap_btn_green"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:text="我要出价"
                android:layout_marginTop="@dimen/dp_30"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
