<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_ali_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_0_5"
        android:background="@drawable/selector_pay_item"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20">
        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_alipay"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="支付宝支付"
            android:textColor="#000"
            android:layout_toRightOf="@id/iv_alipay"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_find_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#DBDBDB"/>

    <RelativeLayout
        android:id="@+id/rl_wechart_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_pay_item"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20">
        <ImageView
            android:id="@+id/iv_weichat"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_weichat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="微信支付"
            android:textColor="#000"
            android:layout_toRightOf="@id/iv_weichat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_find_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
